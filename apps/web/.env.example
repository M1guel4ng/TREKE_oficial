# Ambiente de ejecución: development, production, test
NODE_ENV=development

# Puerto donde corre el servidor
PORT=4000

# Origen permitido para CORS
CORS_ORIGIN=http://localhost:5173

# Configuración de PostgreSQL
PGHOST=localhost
PGPORT=5432
PGDATABASE=TREKE2
PGUSER=postgres
PGPASSWORD=your_password_here

# JWT (JSON Web Token)
# Llave secreta para firmar los tokens — CAMBIAR en producción
JWT_SECRET=change_me_secret_key
# Tiempo de expiración del token (ej: 1d, 7d, 1y, 12h)
JWT_EXPIRES_IN=1y
